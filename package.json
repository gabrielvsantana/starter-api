{
  "name": "api",
  "version": "1.0.0",
  "description": "",
  "keywords": [],
  "author": "",
  "license": "Â©",
  "engines": {
    "node": "18.x"
  },
  "scripts": {
    "check": "npm-check -s -u",
    "clean": "rimraf dist",
    "build": "npm run clean && tsc -p tsconfig.build.json",
    "start": "node dist/main.js",
    "start:dev": "ts-node-dev --respawn --transpile-only src/main.ts",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest --passWithNoTests --runInBand --no-cache --forceExit",
    "test:watch": "npm t -- --watch",
    "test:staged": "npm t -- --findRelatedTests",
    "test:coverage": "npm t -- --coverage",
    "test:integration": "npm run test:setup -- -c jest.config.integration.js",
    "test:all": "npm run test:setup -- -c jest.config.all.js",
    "test:cov": "npm run test:all -- --coverage",
    "test:setup": "NODE_ENV=test npm run db:test:init && npm t",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js",
    "db": "npm run typeorm -- -d ./src/infra/db/pg.datasource.ts",
    "db:migration:run": "npm run db -- migration:run",
    "db:migration:revert": "npm run db -- migration:revert",
    "db:migration:generate": "npm run db -- migration:generate ./src/infra/db/migrations/$npm_config_name",
    "db:migration:create": "npm run typeorm -- migration:create ./src/infra/db/migrations/$npm_config_name",
    "db:test:init": "docker compose --env-file ./.env.test up --renew-anon-volumes -d && npm run db:migration:up"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "module-alias": "^2.2.3",
    "pg": "^8.11.3",
    "rimraf": "^5.0.5",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.10",
    "@types/module-alias": "^2.0.4",
    "@types/node": "^20.9.4",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  }
}
